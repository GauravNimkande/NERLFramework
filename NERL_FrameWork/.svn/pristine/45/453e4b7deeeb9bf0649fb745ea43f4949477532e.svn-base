package NERL;

import org.openqa.selenium.WebDriver;

public class SelectWebDriver {
	public WebDriverService webDriverService;
	
	public WebDriver selectDriver(String driverType){
		  WebDriver webDriver=null;
		if(NERLConstants.CHROME_DRIVER.equals(driverType)){
			webDriverService = new ChromeDriverImpl();
			webDriver = webDriverService.getDriver();
		}else if(NERLConstants.FIREFOX_DRIVER.equals(driverType)){
			webDriverService = new FireFoxDriverImpl();
			webDriver = webDriverService.getDriver();
		}
		return webDriver;
	}

}
